{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "dist",
        
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "allowJs": true,
        
    },
    "include": [
        "./api/*.ts",
        "src/**/*.ts" // Keep existing include pattern for src folder
        // "auth-intermediary-service/**/*.ts"
        
    ],
    "exclude": ["node_modules", "dist"]
}
